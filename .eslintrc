{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "airbnb",
    "plugin:flowtype/recommended",
  ],
  "env": {
    "amd": true,
    "browser": true,
    "node": true,
    "jest": true,
  },
  "parserOptions": {
    "ecmaVersion": 6,
  },
  "plugins": [
    "react",
    "flowtype",
  ],
  "globals": {
    "guardian": true,
    "React": true,
    "ga": true,
    "Raven": true,
  },
  "rules": {
    "curly": [2, "all"],
    "no-trailing-spaces": 2,
    "quotes": [2, "single"],
    "wrap-iife": 2,
    "no-console": 0,
    // For preact-compat, delete if switching to React.
    "import/no-duplicates": "off",
    "import/no-extraneous-dependencies": "off",
    "padded-blocks": "off",
    // We don't prefer export default
    "no-default-export": "warn",
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/resolver": "webpack",
    "flowtype": {
        "onlyFilesWithFlowAnnotation": true,
    },
  },
}
