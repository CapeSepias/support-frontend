{
  "name": "support-frontend",
  "version": "1.0.0",
  "description": "Frontend for the supporter platform.",
  "scripts": {
    "clean": "echo 'Cleaning Public Folder' &&  rimraf public/*",
    "validate": "echo 'Validating JS' && npm-run-all --serial lint flow",
    "lint": "eslint --ext .js --ext .jsx .",
    "flow": "flow",
    "build-dev": "npm-run-all --serial build:css:* 'build:js -- --config webpack.config.js --env.dev'",
    "build-prod": "npm-run-all --serial clean validate test build:css:* 'build:js -- --config webpack.config.js --env.prod'",
    "build:css:sass": "node-sass assets/stylesheets/main.scss public/stylesheets/main.css",
    "build:css:postcss": "echo 'Running PostCSS' && postcss -u postcss-pxtorem autoprefixer -r public/stylesheets/*.css",
    "build:js": "webpack",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "npm run build:js -- --watch",
    "watch:css": "npm-run-all --parallel watch:css:*",
    "watch:css:sass": "npm run build:css:sass -- -w",
    "devrun": "npm-run-all --serial clean build-dev --parallel watch webpack-dev-server",
    "webpack-dev-server": "webpack-dev-server --port 9111",
    "test": "echo 'Running JS tests' && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/support-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/guardian/support-frontend/issues"
  },
  "dependencies": {
    "react-redux": "^5.0.4",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "flow-bin": "^0.44.2",
    "jest": "^19.0.2",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "postcss": "^5.2.17",
    "postcss-cli": "^3.2.0",
    "postcss-pxtorem": "^4.0.0",
    "preact": "^7.2.1",
    "preact-compat": "^3.14.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "sass-mq": "^3.3.2",
    "webpack": "~2.3.3",
    "webpack-dev-server": "^2.4.2",
    "webpack-manifest-plugin": "^1.1.0"
  }
}
